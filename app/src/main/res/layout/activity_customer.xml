<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerActivity"
    android:orientation="vertical"
    android:background="#eceff1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="21dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/id_search"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/cari_id_pelanggan"/>
            <Button
                android:id="@+id/btn_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_search"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>
    </LinearLayout>



    <ScrollView
        android:id="@+id/id_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/text_idpel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO PA"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/id_nopa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123452"
                        android:layout_below="@+id/text_idpel"
                        android:textColor="#757575"
                        android:paddingTop="12dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/textsid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SID"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/id_sid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textsid"
                        android:text="40DCGH#"
                        android:paddingTop="12dp"
                        android:textColor="#757575"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/text_layanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LAYANAN"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/id_layanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_layanan"
                        android:text="123452"
                        android:paddingTop="12dp"
                        android:textColor="#757575"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/text_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CUSTOMER"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/id_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_customer"
                        android:text="123452"
                        android:paddingTop="12dp"
                        android:textColor="#757575"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/id_text_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADDRESS"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginRight="100dp"/>
                    <TextView
                        android:id="@+id/id_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id_text_address"
                        android:text="Bandung Timur Cilenyi Wetan"
                        android:paddingTop="12dp"
                        android:textColor="#757575"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/text_bw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BW"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/id_bw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_bw"
                        android:text="ini adalah halaman bw"
                        android:paddingTop="12dp"
                        android:textColor="#757575"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/text_addon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADDON"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/id_addon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_addon"
                        android:text="403020101"
                        android:paddingTop="12dp"
                        android:textColor="#757575"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageButton
                    android:layout_marginLeft="18dp"
                    android:id="@+id/image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/photo"
                    android:layout_marginRight="28dp">
                </ImageButton>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="picture.jpg"
                    android:textColor="#757575"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="a.n tanda tangan"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="18dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_rectangle_login"
                android:text="submit"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>